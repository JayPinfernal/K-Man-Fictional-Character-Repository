       <!-- Initialize the editor. -->
       <script>
       			CKEDITOR.replace( 'datval',{
              plugins : 'wysiwygarea,iframe,iframedialog,toolbar,image,embed,embedbase,basicstyles,list,table,sourcearea,format,horizontalrule,stylescombo,tabletools,liststyle,font,justify'

            } );
            CKEDITOR.config.embed_provider='//ckeditor.iframe.ly/api/oembed?url={url}&callback={callback}';
            CKEDITOR.config.allowedContent =true;
            CKEDITOR.config.disallowedContent = 'script style';
            CKEDITOR.config.contentsCss='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css';
            CKEDITOR.stylesSet.add( 'my_styles', [

    // Inline styles
    { name: 'Info Alert', element: 'p', attributes: { 'class': 'alert alert-info' } },
    { name: 'Dark Alert', element: 'div', attributes: { 'class':'alert alert-dark' } }
] );
    CKEDITOR.config.stylesSet = 'my_styles';
       		</script>
